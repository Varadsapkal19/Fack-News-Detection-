<script>
const SAMPLES = [
  {
    text: "Scientists at the European Centre for Disease Prevention and Control confirmed that the new mRNA vaccine has shown 94.5% efficacy in phase 3 trials involving over 40,000 participants across 6 countries. The results were published in the peer-reviewed journal The Lancet.",
    label: "REAL",
    confidence: 0.91,
    note: "High confidence ‚Äî contains verifiable institutions, statistics, and peer-reviewed sourcing."
  },
  {
    text: "Researchers at MIT published findings in Nature showing that a newly discovered protein structure could be key to treating Alzheimer's disease. The study involved a 10-year longitudinal analysis of 2,300 patients.",
    label: "REAL",
    confidence: 0.87,
    note: "Credible source indicators: named institution, reputable journal, longitudinal methodology."
  },
  {
    text: "BREAKING: Government secretly adds mind-control chemicals to tap water to suppress population!!! Share before they delete this. Bill Gates confirmed to be behind it. mainstream media won't tell you the truth!!!",
    label: "FAKE",
    confidence: 0.96,
    note: "Strong fake indicators: sensational caps, conspiracy framing, urgency language, unnamed sources."
  },
  {
    text: "NASA scientists ADMIT the moon landing was filmed in a Hollywood studio. Classified documents leaked by whistleblower prove astronauts never left Earth's atmosphere. The truth they've been hiding for 50 years.",
    label: "FAKE",
    confidence: 0.94,
    note: "Debunked claim with conspiracy framing, unverifiable 'leaked documents', and no credible sourcing."
  }
];

function loadSample(i) {
  document.getElementById('article-input').value = SAMPLES[i].text;
  const rb = document.getElementById('result-box');
  rb.style.display = 'none';
}

function clearInput() {
  document.getElementById('article-input').value = '';
  document.getElementById('result-box').style.display = 'none';
}

function analyzeArticle() {
  const text = document.getElementById('article-input').value.trim();
  if (!text) {
    document.getElementById('article-input').focus();
    return;
  }

  const btn = document.querySelector('.btn-primary');
  btn.innerHTML = '<span class="spinner"></span>Analyzing‚Ä¶';
  btn.disabled = true;

  // Simulate ML inference delay
  setTimeout(() => {
    // Heuristic simulation for demo
    let matched = SAMPLES.find(s => s.text.trim() === text.trim());
    let result;

    if (matched) {
      result = matched;
    } else {
      // Simple heuristic for unknown text
      const fakeWords = ['secret','shocking','they don','fake','hoax','exposed','hidden','truth','government','cover','!!!','breaking','leaked','whistleblower'];
      const score = fakeWords.reduce((acc, w) => acc + (text.toLowerCase().includes(w) ? 1 : 0), 0);
      const isFake = score >= 2;
      result = {
        label: isFake ? 'FAKE' : 'REAL',
        confidence: isFake ? 0.65 + Math.random() * 0.25 : 0.60 + Math.random() * 0.30,
        note: 'Simulated result based on linguistic heuristics. Connect to trained model for real inference.'
      };
    }

    showResult(result);
    btn.innerHTML = 'Analyze Article';
    btn.disabled = false;
  }, 900 + Math.random() * 400);
}

function showResult({ label, confidence, note }) {
  const rb = document.getElementById('result-box');
  const rl = document.getElementById('result-label');
  const cf = document.getElementById('conf-fill');
  const cv = document.getElementById('conf-val');
  const rn = document.getElementById('result-note');

  rb.className = 'result-box ' + label.toLowerCase();
  rl.textContent = label === 'REAL' ? '‚úÖ  REAL NEWS' : 'üö´  FAKE NEWS';
  cv.textContent = Math.round(confidence * 100) + '%';
  rn.textContent = note;

  rb.style.display = 'block';
  cf.style.width = '0%';
  requestAnimationFrame(() => {
    requestAnimationFrame(() => {
      cf.style.width = Math.round(confidence * 100) + '%';
    });
  });
}

function copyCode() {
  const code = document.getElementById('code-snippet').innerText;
  navigator.clipboard.writeText(code).then(() => {
    const btn = document.querySelector('.copy-btn');
    btn.textContent = 'Copied!';
    setTimeout(() => btn.textContent = 'Copy', 1800);
  });
}
</script>
